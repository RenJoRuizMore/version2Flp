<struts>
      <!-- Add your configuration elements here -->
      <package name="package_jefe_planta" extends="struts-default">
        <action name="ir_actualizar_clientes" class="Acciongenerico.AccionLoguear" method="ruteador">
            <result name="success">/paginas/jefe_planta/ListaClientes.jsp </result>
        </action>
        <action name="ir_lista_jefe_areas" class="Acciongenerico.AccionLoguear" method="ruteador">
            <result name="success">/paginas/jefe_planta/ListaJefeCadaArea.jsp </result>
        </action>
         <action name="ir_actualizar_datos_empleados" class="Acciongenerico.AccionLoguear" method="ruteador">
            <result name="success">/paginas/jefe_planta/ActualizarDatosEmpleado.jsp </result>
        </action>
        
        <action name="ir_consul_pedido" class="Acciongenerico.AccionLoguear" method="ruteador">
            <result name="success">/paginas/jefe_planta/ConsultaPedidoPendiente.jsp </result>
        </action>
        <action name="ir_configuracion" class="Acciongenerico.AccionLoguear" method="ruteador">
            <result name="success">/paginas/jefe_planta/OpcionesConfiguracionSistema.jsp </result>
        </action>
         <action name="ir_resultados_encuestas" class="Acciongenerico.AccionLoguear" method="ruteador">
            <result name="success">/paginas/jefe_planta/ExportarResultadosEncuenta.jsp </result>
        </action>
        <action name="ir_actualizar_datos" class="Acciongenerico.AccionLoguear" method="ruteador">
            <result name="success">/paginas/jefe_planta/ActualizarDatosCliente.jsp </result>
        </action>
    </package>
    
    <package name="json_jefe_planta" extends="json-default">
        <action name="traer_datos_configuracion" class="Accion_Jefe_Planta.JefePlanta_Configuraciones" method="listar_configuracion">
            <result type="json">
                <param name="root">obj_configuracion</param> 
            </result>
        </action>
        <!-- action para guardar datos -->
        <action name="guardar_configuraciones" class="Accion_Jefe_Planta.JefePlanta_Configuraciones" method="guardar_configuracion">
          <!--  <result name="success"></result> -->
             <result type="json" name="success"></result>
        </action>
        
        <!--  action para listar los jefes de cada area  -->
        <action name="lst_jefes_area" class="Accion_Jefe_Planta.JefePlanta_Configuraciones" method="listar_jefes_areas"> 
            <result type="json">
                <param name="root">lst_jefe_area</param>
            </result>
        </action>
        <!-- traer datos por id --> 
        <action name="traer_datos_por_id" class="Accion_Jefe_Planta.JefePlanta_Configuraciones" method="jefe_area_por_id">
            <result type="json">
                <param name="root">obj_jefe_area</param>
            </result>
        </action>
        <!-- traer areas de produccion -->
        <action name="traer_datos_area_produccion" class="Accion_Jefe_Planta.JefePlanta_Configuraciones" method="traer_area_produccion">
              <result type="json">
                <param name="root">lst_areas_produccion</param>
            </result>
        </action>
        
        <!-- modificar jefes de area -->
        <action name="modificar_jefes_area" class="Accion_Jefe_Planta.JefePlanta_Configuraciones" method="modificar_jefes_are">
            <result type="json" name="success"></result>
        </action>
        
        
        <!-- eliminar  jefes de area -->
        <action name="eliminar_por_id" class="Accion_Jefe_Planta.JefePlanta_Configuraciones" method="eliminar_jefes_are">
            <result type="json" name="success"></result>
        </action>
        
    </package> 
    
    
    <package name="json_jefe_lista_clientes" extends="json-default">
         <action name="lst_clientes" class="Accion_Jefe_Planta.jefe_lista_clientes" method="listar_clientes">
            <result type="json">
                <param name="root">lst_clientes</param>
            </result>
        </action>
        
        <action name="ir_editar_cliente" class="Accion_Jefe_Planta.jefe_lista_clientes" method="ruteador">
            <result name="success">/paginas/jefe_planta/ActualizarDatosCliente.jsp </result>
        </action>
        
         <action name="carga_datos" class="Accion_Jefe_Planta.jefe_lista_clientes" method="carga_datos_modificar">
            <result type="json">
                <param name="root">lst_clientes</param>
            </result>
        </action>
        <action name="guardar_datos_cliente" class="Accion_Jefe_Planta.jefe_lista_clientes" method="guardar_cliente">
            <result type="json" name="success"> </result>
        </action>
        
        <action name="ir_listado_clientes" class="Accion_Jefe_Planta.jefe_lista_clientes" method="ruteador">
            <result name="success">/paginas/jefe_planta/ListaClientes.jsp </result>
        </action>
        
         <!-- eliminar  jefes de area -->
        <action name="eliminar_por_id_clientes" class="Accion_Jefe_Planta.jefe_lista_clientes" method="eliminar_jclientes">
            <result type="json" name="success"></result>
        </action>
        
        
    </package>
    
</struts>
